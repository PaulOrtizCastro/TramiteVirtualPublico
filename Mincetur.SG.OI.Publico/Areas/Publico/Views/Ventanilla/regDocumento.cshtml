@using System.Configuration;
@using System.Web.Optimization;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>regDocumento</title>
    <script type="text/javascript">
        var strRutaAdjuntosMemo = '@ConfigurationManager.AppSettings["strRutaAdjuntosMemo"]';
        var strRutaAdjuntoServicio = '@ConfigurationManager.AppSettings["strRutaAdjuntoServicio"]';
    </script>
</head>
<body>
    @Scripts.Render("~/bundles/Reporte/ConsultaRegDocumento")
    <div class="modal-content" style="height: 100%;width:100%">
        <div class="modal-body" style="height: 100%; overflow-y: scroll; width:100%">
            @*<form class="form-horizontal form-label-left">*@
            <div class="form-group">
                <div class="col-sm-5">
                    <div class="bs-example">
                        <div class="panel-group" id="accordion_1">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                            Información del
                                            Documento
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseOne" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <div id="divLayoutMainRegDoc">
                                            <div id="ui-layout-main-panel">
                                                <div id="divDatodGeneralesRegDoc">
                                                    <table id="tablasRegistro" class="tablasRegistro">
                                                        <tr>
                                                            <td>
                                                                Expediente
                                                            </td>
                                                            <td>
                                                                <span class="campoResaltado" data-id="ID_EXPE">@ViewBag.ID_EXPE</span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Año
                                                            </td>
                                                            <td>
                                                                <span data-id="ID_ANO_PROC">@ViewBag.ID_ANO_PROC</span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Tipo de Documento
                                                            </td>
                                                            <td>
                                                                <span id="spanDesDoc" style="cursor: pointer; border-bottom: 2px solid grey" data-id="DES_DOC">@ViewBag.DES_DOC</span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Asunto
                                                            </td>
                                                            <td>
                                                                @*<span id="spanDesAsunto" style="cursor: pointer; border-bottom: 2px solid grey" data-id="DES_OBS">@ViewBag.DES_OBS</span>*@
                                                                <span id="spanDesAsunto" data-id="DES_OBS">@ViewBag.DES_OBS</span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Autor
                                                            </td>
                                                            <td>
                                                                <span data-id="DESC_USU">@ViewBag.DESC_USU</span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Oficina
                                                            </td>
                                                            <td>
                                                                <span data-id="DESC_OFI_ABR">@ViewBag.DESC_OFI_ABR</span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                Situación
                                                            </td>
                                                            <td>
                                                                <span data-id="DES_ESTADO">@ViewBag.DES_ESTADO</span>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                                <br />
                                                <div id="divRevisionesRegDoc">
                                                    <table id="tblGrillaRevisiones" style="text-align: center">
                                                    </table>
                                                </div>
                                                <br />
                                                <div id="divReferenciasRegDoc">
                                                    @*<table id="tblGrillaReferencias" style="text-align: center">
                                                    </table>*@
                                                </div>
                                                <br />
                                                <div id="divSubidaArchivosRegDoc">
                                                </div>
                                                <br />
                                                @*<p id="pAdjuntosRegDoc" class="campoResaltado" style="display: none">
                                                    Adjuntos</p>*@
                                                <div id="divAdjuntosArchivosRegDoc">
                                                        @*<table id="tbGrilla_ArchivosRegDoc">
                                                        </table>*@
                                                    </div>
                                                <div id="divRequisitosArchExpRegDoc" class="jqGridDocs" style="text-align: center; font-size:12px">
                                                </div>
                                                <br />
                                                <div id="divAdjuntosArchivosRegDoc" class="jqGridDocs" style="text-align: center; font-size:12px">
                                                </div>
                                                <br />
                                                @* <div id="divPager_ArchivosRegDoc"></div>*@
                                                <div id="divSeguimientoRegDoc" class="jqGridDocs" style="text-align: center; font-size:12px;">
                                                    @*<table id="tblGrillaSeguimiento" style="text-align: center">
                                                        </table>*@
                                                </div>
                                                <input type="hidden" id="lbReferenciasRegDoc" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-7">
                    <div class="bs-example">
                        <div class="panel-group" id="accordion_2">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                            Vista previa
                                            del Documento
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <iframe id="ifrVistaPreviaRegDoc" style="width: 100%; height: 800px" frameborder="0">
                                        </iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* </form>*@
        </div>
    </div>
    <div style="display: none">
        <input type="hidden" id="hfIdTipDoc" value=@ViewBag.ID_TIP_DOC />
        <input type="hidden" id="hfIdFlgEst" value=@ViewBag.FLG_EST />
        <input type="hidden" id="hfIdDoc" value=@ViewBag.ID_DOC />
        <input type="hidden" id="hfIdExpe" value=@ViewBag.ID_EXPE />
    </div>
</body>
</html>
